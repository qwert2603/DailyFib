<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/text_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="6.557.470.319.842"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/likes_TextView"
            style="@style/postButton"
            android:layout_gravity="start"
            android:text="2 likes" />

        <TextView
            android:id="@+id/reposts_TextView"
            style="@style/postButton"
            android:layout_gravity="center_horizontal"
            android:text="2 reposts" />

        <TextView
            android:id="@+id/comments_TextView"
            style="@style/postButton"
            android:layout_gravity="end"
            android:text="2 comments" />

    </FrameLayout>

</LinearLayout>